<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Tiêu đề phim -->
    <TextView
        android:id="@+id/tvMovieTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tên phim"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Thông tin rạp -->
    <TextView
        android:id="@+id/tvCinema"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rạp: CGV Sư Vạn Hạnh"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvMovieTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Thời gian -->
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Thời gian: 20/6/2025 - 19:00"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvCinema"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Ghế -->
    <TextView
        android:id="@+id/tvSeat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ghế: B5, B6"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nút xác nhận -->
    <Button
        android:id="@+id/btnConfirmBooking"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Xác nhận đặt vé"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/purple_700"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/tvSeat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/btnFavorite"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_heart_outline"
        android:contentDescription="Yêu thích"
        app:layout_constraintTop_toBottomOf="@id/btnConfirmBooking"
        app:layout_constraintStart_toStartOf="parent" />



    <ImageButton
        android:id="@+id/btnShare"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_share"
        android:contentDescription="Chia sẻ"
        app:layout_constraintTop_toBottomOf="@id/btnConfirmBooking"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
