<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/padding_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tiêu đề"
                android:minHeight="@dimen/input_height"
                android:padding="@dimen/padding_small"
                android:background="@drawable/edit_text_background"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="@dimen/margin_medium"/>

            <EditText
                android:id="@+id/edtAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tác giả"
                android:minHeight="@dimen/input_height"
                android:padding="@dimen/padding_small"
                android:background="@drawable/edit_text_background"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="@dimen/margin_medium"/>

            <EditText
                android:id="@+id/edtTrailer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Link trailer"
                android:minHeight="@dimen/input_height"
                android:padding="@dimen/padding_small"
                android:background="@drawable/edit_text_background"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="@dimen/margin_medium"/>

            <EditText
                android:id="@+id/edtGenre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Thể loại"
                android:minHeight="@dimen/input_height"
                android:padding="@dimen/padding_small"
                android:background="@drawable/edit_text_background"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="@dimen/margin_medium"/>

            <EditText
                android:id="@+id/edtDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Thời lượng (phút)"
                android:inputType="number"
                android:minHeight="@dimen/input_height"
                android:padding="@dimen/padding_small"
                android:background="@drawable/edit_text_background"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="@dimen/margin_medium"/>

            <EditText
                android:id="@+id/edtHeart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lượt tim"
                android:inputType="number"
                android:minHeight="@dimen/input_height"
                android:padding="@dimen/padding_small"
                android:background="@drawable/edit_text_background"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="@dimen/margin_medium"/>

            <EditText
                android:id="@+id/edtShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lượt chia sẻ"
                android:inputType="number"
                android:minHeight="@dimen/input_height"
                android:padding="@dimen/padding_small"
                android:background="@drawable/edit_text_background"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="@dimen/margin_medium"/>

            <EditText
                android:id="@+id/edtRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Đánh giá (vd: 4.5)"
                android:inputType="numberDecimal"
                android:minHeight="@dimen/input_height"
                android:padding="@dimen/padding_small"
                android:background="@drawable/edit_text_background"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="@dimen/margin_medium"/>

            <EditText
                android:id="@+id/edtReleaseDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ngày phát hành (yyyy-MM-dd)"
                android:inputType="date"
                android:minHeight="@dimen/input_height"
                android:padding="@dimen/padding_small"
                android:background="@drawable/edit_text_background"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="@dimen/margin_medium"/>

            <ImageView
                android:id="@+id/imgPosterPreview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="@drawable/image_border"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnChoosePoster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn poster"
                android:background="@drawable/button_background"
                android:textColor="@color/white"
                android:paddingHorizontal="@dimen/padding_medium"
                android:paddingVertical="@dimen/padding_small"
                android:elevation="4dp"
                android:stateListAnimator="@null"
                android:layout_marginTop="@dimen/margin_medium"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>