<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/edtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tiêu đề phim"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tác giả" />

        <EditText
            android:id="@+id/edtTrailer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Link trailer" />

        <EditText
            android:id="@+id/edtGenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Thể loại" />

        <EditText
            android:id="@+id/edtDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Thời lượng (phút)"
            android:inputType="number" />

        <EditText
            android:id="@+id/edtReleaseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ngày khởi chiếu"
            android:focusable="false" />

        <EditText
            android:id="@+id/edtHeart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lượt yêu thích"
            android:inputType="number" />

        <EditText
            android:id="@+id/edtShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lượt chia sẻ"
            android:inputType="number" />

        <EditText
            android:id="@+id/edtRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Đánh giá"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá vé"
            android:inputType="number" />

        <!-- Spinner chọn poster -->
        <Spinner
            android:id="@+id/spinnerPoster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!-- Ảnh xem trước -->
        <ImageView
            android:id="@+id/imgPosterPreview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/sample_movie" />
    </LinearLayout>
</ScrollView>
